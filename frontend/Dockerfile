FROM node:18-alpine AS build
WORKDIR /app
COPY . ./

ARG REACT_APP_BACKEND_IP
ARG MEDIA_URL
ARG VITE_GOOGLE_API_KEY
ARG VITE_GOOGLE_ACCESS_TOKEN
ARG VITE_CALENDAR_ID
ARG VITE_CLIENT_ID
ARG VITE_CLIENT_SECRET


ENV REACT_APP_BACKEND_IP $REACT_APP_BACKEND_IP
ENV MEDIA_URL $MEDIA_URL
ENV VITE_GOOGLE_API_KEY $VITE_GOOGLE_API_KEY
ENV VITE_GOOGLE_ACCESS_TOKEN $VITE_GOOGLE_ACCESS_TOKEN
ENV VITE_CALENDAR_ID $VITE_CALENDAR_ID
ENV VITE_CLIENT_ID $VITE_CLIENT_ID
ENV VITE_CLIENT_SECRET $VITE_CLIENT_SECRET

RUN yarn install --frozen-lockfile
RUN yarn build 

FROM nginx:latest

COPY --from=build /app/dist /usr/share/nginx/html

COPY nginx.conf /etc/nginx/nginx.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]